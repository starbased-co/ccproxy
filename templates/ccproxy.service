[Unit]
Description=CCProxy - LiteLLM Transformation Hook System
Documentation=https://github.com/starbased-co/ccproxy
After=network.target

[Service]
Type=forking
WorkingDirectory=%h/.ccproxy
PIDFile=%h/.ccproxy/ccproxy.pid
ExecStart=/usr/bin/env ccproxy start
ExecStop=/usr/bin/env ccproxy stop
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ccproxy

# LiteLLM environment variables
Environment="HOST=127.0.0.1"
Environment="PORT=4000"
Environment="NUM_WORKERS=1"
Environment="DEBUG=false"
Environment="DETAILED_DEBUG=false"

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=%h/.ccproxy

[Install]
WantedBy=default.target
